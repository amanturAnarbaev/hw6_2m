<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_logo"
    tools:context=".MainActivity">






    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/editText1"
        android:layout_marginHorizontal="85dp"
        android:layout_marginTop="25dp"
        android:text="выполните вход или зарегистрируйтесь "
        android:textColor="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_above="@id/editText2"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_text"
        android:backgroundTint="@color/white"
        android:hint="Введите вашу почту "
        android:textColor="@color/black" />

    />


    <TextView
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Вход"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/registration"

        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="37mm"
        android:text="Добро пожаловать!"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />



    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="20dp"
        android:layout_above="@id/bottom"
        android:background="@drawable/bg_edit_text"
        android:backgroundTint="@color/white"
        android:hint="Введите пароль"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/forget"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_text"
        android:text="Войти"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20mm"
        android:layout_marginTop="30dp"
        android:text="Забыли пароль?"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tap_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom"
        
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp"
        android:text="нажми сюда"
        android:textColor="@color/orange"
        android:textSize="15sp" />


</RelativeLayout>